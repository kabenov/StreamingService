<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_music_list_item_image"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/music_card_img"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_music_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bye Bye"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_view_music_list_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Marshmello, Juice WRLD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/secondary_text"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_music_list_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:text="2:09"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/music_list_item_duration"/>

</LinearLayout>